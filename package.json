{
  "name": "insight-lens",
  "displayName": "Insight lens",
  "version": "0.0.1",
  "description": "Turn long articles into clear insights using Chrome Built-in AI.",
  "author": "cocshishir@gmail.com",
  "license": "UNLICENSED",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon.png"
  },
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.18",
    "typescript": "5.3.3"
  },
  "manifest": {
    "manifest_version": 3,
    "name": "Insight Lens",
    "version": "0.0.1",
    "description": "Turn long articles into clear insights using Chrome Built-in AI.",
    "web_accessible_resources": [
      {
        "resources": [
          "assets/notify.mp3"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ],
    "permissions": [
      "activeTab",
      "contextMenus",
      "storage"
    ],
    "host_permissions": [
      "https://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "commands": {
      "trigger-review": {
        "suggested_key": {
          "default": "Ctrl+Shift+E",
          "mac": "Command+Shift+E"
        },
        "description": "Trigger code review on selected text"
      }
    },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "/content/text-actions.ts"
        ]
      },
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "/content/notify.tsx"
        ]
      }
    ]
  }
}
